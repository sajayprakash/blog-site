---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION, HOMEPAGE_URL } from "../consts";
import Body from "../components/Body.astro";
import Content from "../components/Content.astro";
import { IoArrowForward } from "react-icons/io5";
import Masthead from "../components/Masthead.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header title={SITE_TITLE} />
    <main class="pt-[56px]">
      <Masthead />
      <Content>
        <section>
          <p class="mb-8 indent-4">
            I&apos;m very passionate about technology, computers, digital
            privacy, productivity, minimalism, anime and so much more. So I
            thought it would be a great idea to build a blogging site for myself
            so that I can share what I find interesting to you!
          </p>
          <a
            class="inline-flex items-center gap-1 indent-1 text-orange-500"
            href={HOMEPAGE_URL}
          >
            About Me <IoArrowForward className="inline" />
          </a>
        </section>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
